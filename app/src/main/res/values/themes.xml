<resources>

    <style name="Theme.PlaylistMaker" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorControlActivated">@color/active_button</item>
        <item name="android:fontFamily">@font/ys_500</item>
        <item name="colorControlHighlight">@color/ripple</item>
        <item name="actionBarStyle">@style/Theme.PlaylistMaker.AppBarOverlay</item>
        <item name="switchStyle">@style/MySwitchStyle</item>
    </style>

    <style name="Theme.PlaylistMaker.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/header_margin</item>
        <item name="android:fitsSystemWindows">true</item>
        <item name="android:animateLayoutChanges">true</item>
        <item name="android:backgroundTint">@color/colorSecondary</item>
        <item name="titleTextStyle">@style/ToolbarTextTitle</item>
    </style>

    <style name="ToolbarTextTitle" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:fontFamily">@font/ys_500</item>
    </style>

    <style name="Theme.PlaylistMaker.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/toolbar_height</item>
        <item name="android:backgroundTint">@color/colorSecondary</item>
        <item name="navigationIcon">@drawable/ic_back</item>
        <item name="navigationIconTint">@color/white_bg_icon</item>
        <item name="titleTextColor">@color/colorText</item>
    </style>

    <style name="SelectableItemBackground">
        <item name="android:theme">@style/Theme.PlaylistMaker</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
    </style>

    <style name="MySwitchStyle" parent="Widget.AppCompat.CompoundButton.Switch">
        <item name="switchMinWidth">56dp</item>
        <item name="thumbTint">@color/switch_thumb</item>
        <item name="trackTint">@color/switch_track</item>
    </style>

    <style name="LayoutFullScreen">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/colorSecondary</item>
        <item name="android:fitsSystemWindows">true</item>
    </style>

    <style name="BigButton" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_marginTop">@dimen/padding_small_8x</item>
        <item name="android:layout_weight">1</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:backgroundTint">@color/button</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:text">@string/search</item>
        <item name="android:textSize">@dimen/button_text_size</item>
        <item name="android:textColor">@color/button_text</item>
        <item name="android:stateListAnimator">@animator/btn_scale</item>
        <item name="cornerRadius">@dimen/corner_radius</item>
        <item name="iconTint">@color/icon</item>
        <item name="iconGravity">textStart</item>
        <item name="rippleColor">@android:color/transparent</item>
    </style>

    <style name="TextButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/panel_height</item>
        <item name="android:background">?selectableItemBackground</item>
        <item name="android:fontFamily">@font/ys_400</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingHorizontal">@dimen/padding_small_8x</item>
        <item name="android:textColor">@color/white_bg_text</item>
        <item name="drawableTint">@color/white_bg_button</item>
    </style>

    <style name="DescriptionText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:lines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:fontFamily">@font/ys_400</item>
        <item name="android:textSize">@dimen/text_small</item>
        <item name="android:textColor">@color/colorText</item>
    </style>

    <style name="Ellipsized" parent="DescriptionText">
        <item name="android:layout_width">0dp</item>
        <item name="layout_constraintHorizontal_bias">1</item>
        <item name="layout_constraintWidth_default">wrap</item>
    </style>

    <style name="DarkButton" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/ys_500</item>
        <item name="android:textSize">@dimen/text_medium</item>
        <item name="android:textColor">@color/colorSecondary</item>
        <item name="android:backgroundTint">@color/colorText</item>
        <item name="cornerRadius">20dp</item>
    </style>

</resources>