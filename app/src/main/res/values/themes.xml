<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.PlaylistMaker" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorControlActivated">@color/blue</item>
        <item name="colorControlNormal">@color/greyDark</item>
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryDark">@color/blue</item>
        <item name="android:navigationBarColor">@color/blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/greyMedium</item>
        <item name="colorSurface">@color/white</item>
        <item name="android:colorBackground">@color/white</item>
        <item name="colorOnBackground">@color/black</item>
        <item name="android:textColorSecondary">@color/greyDark</item>
        <item name="android:fontFamily">@font/ys_500</item>
        <item name="colorControlHighlight">@color/rippleColor</item>
        <item name="actionBarStyle">@style/Theme.PlaylistMaker.AppBarOverlay</item>
        <item name="switchStyle">@style/MySwitchStyle</item>
        <item name="materialAlertDialogTheme">@style/Theme.PlaylistMaker.Dialog</item>
    </style>

    <style name="Theme.PlaylistMaker.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/toolbar_height</item>
        <item name="android:fitsSystemWindows">true</item>
        <item name="android:animateLayoutChanges">true</item>
        <item name="android:background">@null</item>
    </style>

    <style name="Theme.PlaylistMaker.PopupOverlay" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@null</item>
    </style>

    <style name="Theme.PlaylistMaker.Dialog" parent="ThemeOverlay.Material3.MaterialAlertDialog">
        <item name="colorPrimary">@color/blue</item>
        <item name="colorOnSurface">@color/black</item>
        <item name="colorOnSurfaceVariant">@color/greyDark</item>
        <item name="android:background">@color/white</item>
        <item name="buttonBarPositiveButtonStyle">@style/CustomDialogButtonStyle</item>
        <item name="buttonBarNegativeButtonStyle">@style/CustomDialogButtonStyle</item>
        <item name="shapeAppearanceOverlay">@style/CustomDialogShape</item>
    </style>

    <style name="CustomDialogButtonStyle" parent="Widget.Material3.Button.TextButton.Dialog">
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="CustomDialogShape" parent="ShapeAppearance.Material3.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/padding_small_4x</item>
    </style>

    <style name="CustomTextInputStyle" parent="">
        <item name="colorControlActivated">@color/blue</item>
    </style>
</resources>