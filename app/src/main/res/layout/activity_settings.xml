<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/LayoutFullScreen"
    tools:ignore="MissingConstraints">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar"
        style="@style/Theme.PlaylistMaker.AppBarOverlay">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            style="@style/Theme.PlaylistMaker.PopupOverlay"
            app:title="@string/settings" />

    </com.google.android.material.appbar.AppBarLayout>

    <TextView
        android:id="@+id/dark_mode_text"
        style="@style/TextButton"
        android:layout_width="wrap_content"
        android:text="@string/dark_mode"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/app_bar" />

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/switch_dark_mode"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/panel_height"
        android:layout_marginEnd="@dimen/padding_small_6x"
        app:layout_constraintBottom_toBottomOf="@+id/dark_mode_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/dark_mode_text" />

    <TextView
        android:id="@+id/btn_settings_share"
        style="@style/TextButton"
        android:text="@string/share_app"
        app:layout_constraintTop_toBottomOf="@+id/dark_mode_text"
        app:drawableEndCompat="@drawable/ic_share_app" />

    <TextView
        android:id="@+id/btn_contact_support"
        style="@style/TextButton"
        android:text="@string/contact_support"
        app:layout_constraintTop_toBottomOf="@+id/btn_settings_share"
        app:drawableEndCompat="@drawable/ic_contact_support" />

    <TextView
        android:id="@+id/btn_settings_user_agreement"
        style="@style/TextButton"
        android:text="@string/user_agreement"
        app:layout_constraintTop_toBottomOf="@+id/btn_contact_support"
        app:drawableEndCompat="@drawable/ic_user_agreement" />

</androidx.constraintlayout.widget.ConstraintLayout>